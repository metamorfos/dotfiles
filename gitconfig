[alias]
  a = add --all
  br = branch
  c = commit -v
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  l = log --graph --decorate --oneline
  ls = ls-files
  p = push-origin-or-fork
  r = recent

  ctags = !$(git rev-parse --git-dir)/hooks/ctags
  safe = !mkdir $(git rev-parse --git-dir)/safe
[merge]
  tool = vimdiff
[core]
  editor = vim -f
  excludesfile = ~/.gitignore
  pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less -F
[push]
  default = current
[help]
  autocorrect = 1
[branch]
  autosetuprebase = always
[init]
  templatedir = ~/.git_template
[commit]
  template = ~/.gitmessage
[grep]
  linenumber = true
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[pull]
