  ls = ls-files
  p = push-origin-or-fork
  r = recent

  ctags = !$(git rev-parse --git-dir)/hooks/ctags
  safe = !mkdir $(git rev-parse --git-dir)/safe
[merge]
  tool = vimdiff
[core]
  editor = vim -f
  excludesfile = ~/.gitignore
  pager = git pager
