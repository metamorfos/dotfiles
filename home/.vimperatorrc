set "editor=/usr/local/bin/mvim -f"
set gui=nonavigation,nobookmarks,nomenu,noaddons
nnoremap ; :

set incsearch 
set hlsearch
set ignorecase
nnoremap ,, :nohlsearch<cr> 
nmap gI 2gi

" move faster
nnoremap j 3j
nnoremap k 3k

nnoremap H :back<CR>
nnoremap L :forward<CR>
nnoremap <c-h> gT
nnoremap <c-l> gt


" cmd + l for opening
noremap <M-l> :open 
inoremap <M-l> <esc>:open 
cnoremap <M-l> <esc>:open 

" cmd + f for search
noremap <M-f> /
inoremap <M-f> <esc>/
cnoremap <M-f> <esc>/

" cmd + t for tabs
noremap <M-t> :tabnew 
inoremap <M-t> <esc>:tabnew 
cnoremap <M-t> <esc>:tabnew 
