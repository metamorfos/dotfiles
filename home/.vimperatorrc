map <C-e> <Esc>$
map <C-a> <Esc>0
map <C-j> <C-w>j
map <C-l> <C-w>l
map <C-h> <C-w>h
map <C-k> <C-w>k
nnoremap <Up> <Nop>
nnoremap <Down> <Nop>
nnoremap <Left> <Nop>
nnoremap <Right> <Nop>
nnoremap ; :
noremap H ^
noremap L g_
noremap ,q :qa!<Return>
set "editor=/usr/local/bin/mvim -f"
set history=1000

set incsearch 
set hlsearch 
set ignorecase
nnoremap <leader><space> :noh<cr> 

" move faster
nnoremap j 3j
nnoremap k 3k

" keep results in the center of the screen
nnoremap N Nzzzv
nnoremap n nzzzv

" cmd + f to search, i love it
noremap <M-f> /

" back and forward in history
nnoremap H :back<CR>
nnoremap L :forward<CR>

" mac bindings
  noremap <M-l> :open 
  noremap <M-f> /
  noremap <M-k> :open google 
