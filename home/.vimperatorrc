set mapleader=","

map <C-e> <Esc>$
map <C-a> <Esc>0
map <C-j> <C-w>j
map <C-l> <C-w>l
map <C-h> <C-w>h
map <C-k> <C-w>k
nnoremap <Up> <Nop>
nnoremap <Down> <Nop>
nnoremap <Left> <Nop>
nnoremap <Right> <Nop>

" i have fat fingers...
nnoremap ; :

set "editor=/usr/local/bin/mvim -f"
set history=1000

" search
set incsearch 
set hlsearch 
set ignorecase
nnoremap <leader><space> <esc>:noh<cr> 

" move faster
nnoremap j 3j
nnoremap k 3k

nnoremap N Nzzzv
nnoremap n nzzzv

" cmd + f to search, i love it
noremap <M-f> /

" Switch tabs with J and K
nnoremap J :tn<CR>
nnoremap K :tp<CR>
