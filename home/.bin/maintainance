#!/bin/sh

echo "Updating, Updating and Pruning Homebrew.."
brew update --rebase && brew upgrade -v && brew cleanup -v
echo 

echo "Removing Homebrew cache.."
rm -rfv /Library/Caches/Homebrew/*
echo 

echo 'Taking out the trash'
rm -rfv ~/.Trash/*
echo 

echo 'Emptying the Desktop from Screen Shots'
rm -rfv ~/Desktop/*Screen\ Shot*.png
echo
