#!/usr/bin/env ruby

require 'colored'

def header(header)
  puts "--> ".blue + "#{header}"
end

def cmd(cmd)
  puts "    % #{cmd}".green
  system cmd
end

header "Updating Homebrew"
cmd "brew update --rebase"

header "Upgrading Homebrew"
cmd "brew upgrade -v"

header "Let Homebrew clean up"
cmd "brew cleanup -v"

header "Running maid scripts"
cmd "maid clean"

header "Cleaning trash"
cmd "rm -rf #{File.expand_path('~/.Trash/*')}"
