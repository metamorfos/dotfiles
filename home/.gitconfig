[user]
  name = Teo Ljungberg
  email = teo.ljungberg@gmail.com
[github]
  user = teoljungberg
[credential]
  helper = osxkeychain
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[alias]
  amend = commit -v --amend
  unstage = reset HEAD --
  lg = log --graph --pretty=format:'%C(yellow)%h%Creset%C(cyan)%d%Creset %s %C(bold)%cr'
  delete-remote-branch = push origin --delete
  undeployed = !git log --oneline `git tag|grep production|tail -n 1`..HEAD
  unpushed = !git log --oneline origin/`git symbolic-ref HEAD 2> /dev/null | awk -F"/" '{ print $3 }'`..
  ctags = !.git/hooks/ctags
[merge]
  tool = vimdiff
  ff = false
[core]
  editor = vim -f
  excludesfile = ~/.gitignore
  pager = less
[push]
  default = tracking
[help]
  autocorrect = 1
[branch]
  autosetuprebase = always
[rerere]
  enabled = true
[init]
  templatedir = ~/.git_template
[grep]
  linenumber = true
