#!/bin/sh
# No arguments: `git push teoljungberg/origin CURRENT_BRANCH`
# With arguments: acts like `git push`

git_origin_or_fork() {
  if git remote 2>/dev/null | grep -iq teoljungberg; then
    echo "teoljungberg"
  else
    echo "origin"
  fi
}

if [ $# -gt 0 ]; then
  git push "$@"
else
  git push "$(git_origin_or_fork)" -u
fi
